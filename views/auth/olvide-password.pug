extends ../layout/index

block contenido
    .py-10

        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores   
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-4.py-3.border.border-gray-300.rounded-xl.placeholder-gray-400(placeholder="Tu email" type="email" name="email")

                    input(class="w-full bg-indigo-600 p-3 text-white cursor-pointer hover:bg-indigo-800 font-bold uppercase" type="submit" value="Enviar Instrucciones")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta?, Registrate
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes una cuenta?, Inicia Sesión