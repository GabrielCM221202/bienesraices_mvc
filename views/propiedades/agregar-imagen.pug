extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content=csrfToken)
block contenido     
    .py-10

        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores   
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg


        div(class=" my-10 bg-white shadow-lg py-8 px-4 rounded mx-auto max-w-4xl md:px-10")
            form(method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}` id="imagen" class="mb-5 space-y-8 dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center") 
            button#publicar(type="button", class="bg-indigo-600 w-full py-3 hover:bg-indigo-800 hover:text-amber-400 text-white font-bold uppercase cursor-pointer") Publicar Propiedad
block scripts
    script(src="/js/agregarImagen.js")